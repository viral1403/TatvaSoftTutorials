@model Company

@{
    ViewData["Title"] = "Company Upsert";
}

<form method="post" asp-action="Upsert"  enctype="multipart/form-data" >
    <input type="hidden" asp-for="Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="col-10">
                <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Add") Product</h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="mb-3 col-6">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="PhoneNumber"></label>
                <input type="text" asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3 col-12">
                <label asp-for="StreetAddress"></label>
                <input type="text" asp-for="StreetAddress" class="form-control" autocomplete="off" />
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="State"></label>
                <input type="text" asp-for="State" class="form-control" autocomplete="off" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="City"></label>
                <input type="text" asp-for="City" class="form-control" autocomplete="off" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="PostalCode"></label>
                <input type="text" asp-for="PostalCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="m-3 col-12">
                <button type="submit" class="btn btn-primary mr-2">@(Model.Id != 0 ? "Update" : "Add")</button>
                <a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}