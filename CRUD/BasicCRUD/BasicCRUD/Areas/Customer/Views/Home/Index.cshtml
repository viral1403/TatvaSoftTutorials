@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    @if(Model != null && Model.Count() > 0){
        @foreach(var product in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border:1px solid #800cba; border-radius:6px;">
                        <div class="card">
                            <img src="@product.ImageUrl" class="card-img-top rounded" style="width:100%;height:250px;"/>
                            <div class="card-body">
                                <div class="pl-1">
                                    <p class="card-title h5 text-primary">@product.Title</p>
                                    <p class="card-title text-info">by @product.Author</p>
                                </div>
                                <div class="pl-1">
                                    <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike>&nbsp;&nbsp;<span style="font-size:15px;font-weight:bold;">$@product.Price</span></p>
                                </div>
                            </div>
                            <div class="card-footer">
                              <div class="row">
                                  <div class="col-12 text-center">
                                      <a class="btn btn-info" asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" style="width:inherit;height:inherit;">Details</a>
                                  </div>
                              </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else{
        <div class ="col-sm-12">Plase wait for new producs to appear.</div>
    }
</div>