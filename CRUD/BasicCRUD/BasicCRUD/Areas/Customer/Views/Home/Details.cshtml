@model ShoppingCart

<form method="post">
    <div class="card container">
        <div class="card-header bg-primary text-light ml-0 row">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Title</h1>
                <p class="text-warning">by @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class='badge bg-info p-2'>@Model.Product.CoverType.Name</span>
                <span class="badge bg-warning p-2">@Model.Product.Category.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted">ISBN: @Model.Product.ISBN</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">List Price: <strike><b>@Model.Product.ListPrice.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-us"))</b></strike></h5>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-lg-6">
                                <div class="row">
                                    <div class="col-3 text-muted">Quantity</div>
                                    <div class="col-3 text-muted text-center">1-50</div>
                                    <div class="col-3 text-muted text-center">51-100</div>
                                    <div class="col-3 text-muted text-center">100+</div>
                                </div>
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-lg-6">
                                <div class="row">
                                    <div class="col-3 text-danger">Price</div>
                                    <div class="col-3 text-danger text-center">@Model.Product.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-us"))</div>
                                    <div class="col-3 text-danger text-center">@Model.Product.Price50.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-us"))</div>
                                    <div class="col-3 text-danger text-center">@Model.Product.Price100.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-us"))</div>
                                </div>
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col-12 text-muted">@Html.Raw(Model.Product.Description)</div>
                        </div>
                        <div class="row pt-2">
                            <div class="col-12"><h4>COUNT</h4></div>
                            <input type="text" class="form-control" asp-for="Count" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-cneter">
                        <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer row">
            <div class="col-12">
                <div class="btn-group">
                    <a class="btn btn-info mx-2" asp-area="Customer" asp-controller="Home" asp-action="Index">Back To List</a>
                    <a class="btn btn-info mx-2" asp-area="" asp-controller="" asp-action="" type="submit">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
</form>